<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h4 class="modal-title">添加团队</h4>
    </div>
    <div class="modal-body">
      <div>
        <div class="form-group">
          <label>团队名称</label>
          <input type="text" name="name" class="form-control" id="name" placeholder="名称">
        </div>
        <div class="form-group">
          <label>团队描述</label>
          <textarea name="description" class="form-control" id="description" placeholder="描述"></textarea>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
      <button type="button" class="btn btn-success" id="team-add">创建</button>
    </div>
  </div>
</div>