<td>{{ username }}</td>
<td>{{ email }}</td>
{{#if is_owner  }}
<td>{{ auth }}</td>
<td></td>
{{^}}
  <td class="dropdown">
    <span class="cur-auth">{{ auth }}</span>
    <button data-action="update" class="btn btn-sm btn-info" data-toggle="dropdown">修改</button>
    <ul class="options dropdown-menu">
      <li class="option" data-name="ADMIN">
        <a>团队管理者</a>
      </li>
      <li class="option" data-name="MEMBER">
        <a>团队成员</a>
      </li>
    </ul>
  </td>
  <td>
    <button class="btn btn-sm btn-warning" data-action="delete">删除</button>
    <div class="confirm hide" data-email="{{ email }}">
      <button class="btn btn-sm btn-danger" data-action="confirm">确认删除？</button>
      <button class="btn btn-sm" data-action="cancel">取消</button>
    </div>
  </td>
{{/if}}