<div class="header">
  <div class="title">{{ name }}</div>
  <div class="tabs">
    <div class="tab active">成员</div>
    <div class="tab">项目</div>
    <div class="tab">设置</div>
  </div>
</div>

<div class="panel active">
  <div class="header">
    <div class="title">成员</div>
  </div>
  <ul class="member-list">
    <li class="member-invite">
      <img class="avatar" src="" alt="邀请成员">
      <p class="name">邀请成员</p>
    </li>
  </ul>
  <div class="team-info">
    <div></div>
  </div>
</div>
<div class="panel">
  <div class="header">
    <div class="title">项目</div>
    <div><a class="btn btn-primary" href="#team-new"></a>新建项目</div>
  </div>
  <ul class="projs-list">
  </ul>
</div>
<div class="panel">
  <div class="header">
    <div class="title">设置</div>
    <div class="tabs"></div>
  </div>
  <div class="settings">
    {{#if is_owner }}
    <h4>修改团队信息</h4>
    <form action="">
      <div class="form-group">
        <label>团队名称</label>
        <input type="text" name="name" class="form-control" id="name" placeholder="名称" value="{{ name }}">
      </div>
      <div class="form-group">
        <label>团队描述</label>
        <textarea name="description" class="form-control" id="description" placeholder="描述" value="{{ description }}"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="更新">
      </div>
    </form>
    <h4>解散团队</h4>
    <a class="btn btn-danger">解散团队</a>
    {{^}}
    <div class="btn btn-warning">退出团队</div>
    {{/if}}
  </div>
</div>