<div class="header">
  <div class="title">{{ name }}</div>
  <div class="tabs">
    <div class="tab active" data-index="members">成员</div>
    <div class="tab" data-index="projs">项目</div>
    <div class="tab" data-index="settings">设置</div>
  </div>
</div>

<div class="wrap">
<div class="panel active" data-index="members">
  <div class="header">
    <div class="title">成员</div>
  </div>
  <ul class="member-list">
    <li class="member-invite">
      <img class="avatar" src="/images/plus.png" alt="邀请成员">
      <p class="name">邀请成员</p>
    </li>
  </ul>
  <div class="team-info">
    <div></div>
  </div>
</div>
<div class="panel" data-index="projs">
  <div class="header">
    <div class="title">项目</div>
    <div class="right"><a class="btn btn-sm btn-primary proj-new" href="javascript:void(0);">新建项目</a></div>
  </div>
  <ul class="projs-list">
  </ul>
</div>
<div class="panel" data-index="settings">
  <div class="header">
    <div class="title">设置</div>
    <div class="tabs"></div>
  </div>
  <div class="cols settings">
    {{#if is_owner }}
    <div class="small-col">
      <h5>修改团队信息</h5>
      <div id="team-info">
        <div class="form-group">
          <label>团队名称</label>
          <input type="text" name="name" class="form-control" id="name" placeholder="名称" value="{{ name }}">
        </div>
        <div class="form-group">
          <label>团队描述</label>
          <textarea name="description" class="form-control" id="description" placeholder="描述">{{ description }}</textarea>
        </div>
        <div class="form-group">
          <button id="team-update" class="btn btn-primary">更新</button>
        </div>
      </div>
      <h5>解散团队</h5>
      <a id="team-delete" class="btn btn-danger">解散团队</a>
      <div class="confirm hide" data-id="{{ id }}">
        <button class="btn btn-sm btn-danger" data-action="confirm">确认删除？</button>
        <button class="btn btn-sm" data-action="cancel">取消</button>
      </div>
    </div>
    <div class="large-col">
      <h5>成员管理</h5>
      <table class="table table-bordered">
        <thead>
          <td>用户</td>
          <td>邮箱</td>
          <td></td>
        </thead>
        <tbody class="members-table">
        </tbody>
      </table>
    </div>
    {{^}}
    <div class="btn btn-warning">退出团队</div>
    {{/if}}
  </div>
</div>
</div>