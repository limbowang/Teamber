<div class="header">
  <div class="title">{{ name }}</div>
  <div class="tabs">
    <div class="tab active" data-index="members">成员</div>
    <div class="tab" data-index="projs">项目</div>
    <div class="tab" data-index="settings">设置</div>
  </div>
</div>

<div class="panel active" data-index="members">
  <div class="header">
    <div class="title">成员</div>
  </div>
  <ul class="member-list">
    <li class="member-invite">
      <img class="avatar" src="" alt="邀请成员">
      <p class="name">邀请成员</p>
    </li>
  </ul>
  <div class="team-info" data-index="projs">
    <div></div>
  </div>
</div>
<div class="panel">
  <div class="header">
    <div class="title">项目</div>
    <div><a class="btn btn-primary" href="#team-new"></a>新建项目</div>
  </div>
  <ul class="projs-list" data-index="settings">
  </ul>
</div>
<div class="panel">
  <div class="header">
    <div class="title">设置</div>
    <div class="tabs"></div>
  </div>
  <div class="settings">
    {{#if is_owner }}
    <div class="info">
      <h4>修改团队信息</h4>
      <div class="form">
        <div class="form-group">
          <label>团队名称</label>
          <input type="text" name="name" class="form-control" id="name" placeholder="名称" value="{{ name }}">
        </div>
        <div class="form-group">
          <label>团队描述</label>
          <textarea name="description" class="form-control" id="description" placeholder="描述" value="{{ description }}"></textarea>
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-primary" value="更新">
        </div>
      </div>
      <h4>解散团队</h4>
      <a class="btn btn-danger">解散团队</a>
    </div>
    <div class="members">
      <table>
        <th>
          <td>用户</td>
          <td>邮箱</td>
          <td></td>
        </th>
        <tr></tr>
      </table>
    </div>
    {{^}}
    <div class="btn btn-warning">退出团队</div>
    {{/if}}
  </div>
</div>